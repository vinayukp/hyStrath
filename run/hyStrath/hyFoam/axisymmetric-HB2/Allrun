#!/bin/bash
cd ${0%/*} || exit 1    # run from this directory

nProcs=1
if [ $# -ne 0 ] ; then
  if ! [[ $nProcs =~ '^[0-9]' ]]
     then nProcs=$1;
  fi
fi

# Source tutorial run functions
. $WM_PROJECT_DIR/bin/tools/RunFunctions

cp -r ./constant/backup-polyMesh ./constant/polyMesh
runApplication checkMesh

cp -r ./backup-0.016 ./0.016

if [ $nProcs -eq 1 ] ; then
  hy2Foam > log.hyFoam
else
  runApplication decomposePar -latestTime
  mpirun -np $nProcs hy2Foam -parallel > log.hyFoam 2>&1
  runApplication reconstructPar -latestTime
fi

hy2Foam -postProcess -dict 'system/surfaceCoefficients' -latestTime
